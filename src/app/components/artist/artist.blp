using Gtk 4.0;
using Adw 1;

template $ArtistWidget : Box {
  orientation: vertical;

  Button avatar_btn {
    vexpand: true;
    width-request: 150;
    height-request: 150;
    receives-default: true;
    halign: center;
    valign: center;
    has-frame: false;

    Adw.Avatar avatar {
      halign: center;
      valign: center;
      show-initials: true;
      size: 150;
    }

    styles [
      "circular",
    ]
  }

  Label artist {
    label: "Artist Name";
  }
}
